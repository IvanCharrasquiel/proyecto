<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoO.Pages.Servicios.SeleccionarHorarioPage"
             Title="Seleccionar Horario">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Selecciona una Fecha:" FontAttributes="Bold" />
            <DatePicker Date="{Binding SelectedFecha}" />

            <Label Text="Horarios Disponibles:" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding HorariosDisponibles}" SelectionMode="Single"
                            SelectedItem="{Binding HorarioSeleccionado}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="5">
                            <StackLayout>
                                <Label Text="{Binding HoraInicio, StringFormat='{0:hh\\:mm}'}" />
                                <Label Text="{Binding HoraFin, StringFormat='{0:hh\\:mm}'}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Continuar" Command="{Binding ContinuarCommand}" IsEnabled="{Binding HorarioSeleccionado}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
