                </Grid.ColumnDefinitions>
                <Image Source="calendar_edit.png" WidthRequest="24" HeightRequest="24" />
                <Button Text="Reprogramar Reserva"
            FontAttributes="Bold"
            FontSize="16"
            TextColor="Black"
            BackgroundColor="Transparent"
            Grid.Column="1"
            HorizontalOptions="FillAndExpand"
            Padding="10,0,0,0"
            Clicked="OnReprogramarReservaClicked" />
            </Grid>-->

            <!-- Nueva opción: Confirmar Reserva -->
            <!--<Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Source="confirm.png" WidthRequest="24" HeightRequest="24" />
                <Button Text="Confirmar Reserva"
            FontAttributes="Bold"
            FontSize="16"
            TextColor="Black"
            BackgroundColor="Transparent"
            Grid.Column="1"
            HorizontalOptions="FillAndExpand"
            Padding="10,0,0,0"
            Clicked="OnConfirmarReservaClicked" />
            </Grid>-->

            <!-- Servicios -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="servicio.png" WidthRequest="24" HeightRequest="24" />
                <Button Text="Servicios"
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="Black"
                        BackgroundColor="Transparent"
                        Grid.Column="1"
                        HorizontalOptions="FillAndExpand"
                        Padding="10,0,0,0"
                        Clicked="OnServicesClicked"/>
            </Grid>

            

            <!-- Ver Perfil -->
            

            <!-- Cerrar Sesión -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="logout.png" WidthRequest="24" HeightRequest="24" />
                <Button Text="Cerrar Sesión"
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="Black"
                        BackgroundColor="Transparent"
                        Grid.Column="1"
                        HorizontalOptions="FillAndExpand"
                        Padding="10,0,0,0"
                        Clicked="OnCerrarSesionClicked"/>
            </Grid>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
