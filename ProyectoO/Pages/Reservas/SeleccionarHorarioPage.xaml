<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoO.Pages.Reservas.SeleccionarHorarioPage"
            >
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Horarios Disponibles:" FontAttributes="Bold" />
        <CollectionView ItemsSource="{Binding HorariosDisponibles}" SelectionMode="Single"
                        SelectedItem="{Binding HorarioSeleccionado}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <Label Text="{Binding HoraInicio, StringFormat='{0:hh\\:mm}'}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Siguiente"
                Command="{Binding ContinuarCommand}"
                IsEnabled="{Binding PuedeContinuar}" />
    </StackLayout>
</ContentPage>
