<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoO.Pages.Dashboard.DashboardGeneral"
             Title="Dashboard">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Label de Bienvenida -->
            <Label x:Name="WelcomeLabel"
                   Text="Bienvenido!"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center"/>
            
            <!-- Contenido Dinámico -->
            <StackLayout x:Name="DynamicContent" Spacing="15">
                <!-- Contenido específico se agrega dinámicamente desde el código-behind -->
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
